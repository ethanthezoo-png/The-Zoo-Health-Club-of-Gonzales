name: Deploy Zoo Gonzales Website

on:
  push:
    branches: [ main ]
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

# ðŸ‘‡ Force all steps to run in the repo root
defaults:
  run:
    working-directory: .

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: List files (debug)
        run: |
          pwd
          ls -la

      - name: Set up Node
        uses: actions/setup-node@v4
        with:
          node-version: 20

      # Use npm i only (no npm ci) to avoid lockfile issues
      - name: Install dependencies
        run: npm i

      - name: Build site
        run: npm run build

      - name: Upload artifact for Pages
        uses: actions/upload-pages-artifact@v3
        with:
          path: dist

  deploy:
    needs: build
    runs-on: ubuntu-latest
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    steps:
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
